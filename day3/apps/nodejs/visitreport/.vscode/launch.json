    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Day3 - Launch SCM Visit Reports API",
            "program": "${workspaceFolder}/server.js",
            "cwd": "${workspaceFolder}/",
            "preLaunchTask": "npm: install",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "SCM_ENV": "development"
            }
        },
    ]
}